MAILTO={{ netmanage_admin }}
APP_ROOT={{ app_root }}

# Discovery - every 15 mins
*/15 * * * *	root		cd $APP_ROOT; ./Console/cake discovery

# Config backups - every hour
0 * * * *	root		cd $APP_ROOT; ./Console/cake config_backup

# Start the queue workers
*/5 * * * *         root        cd $APP_ROOT; ./Console/cake Queue.Queue runworker
*/5 * * * *         root        sleep 4; cd $APP_ROOT; ./Console/cake Queue.Queue runworker
